{% if user.id != app.user.id ?? null %}
    {% set class_button = 'flex-auto text-sm border border-slate-800 rounded bg-slate-200 p-2 text-center hover:bg-slate-300 dark:bg-gray-600 dark:border-slate-200 dark:hover:bg-gray-500' %}
    {% if app.user.following is defined and app.user.following.contains(user) %}
        <a class="{{ class_button }}" href="{{ path('app_unfollow', {id: user.id}) }}">Unfollow</a>
    {% else %}
        <a class="{{ class_button }}" href="{{ path('app_follow', {id: user.id}) }}">Follow</a>
    {% endif %}
{% endif %}