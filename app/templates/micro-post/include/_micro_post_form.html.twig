{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
<div>{{ form_errors(form) }}</div>

<div>
    {{ form_label(form.content, 'Please enter the post text', {'label_attr': {'class': 'block text-gray-700 dark:text-gray-300 font-medium'}}) }}
