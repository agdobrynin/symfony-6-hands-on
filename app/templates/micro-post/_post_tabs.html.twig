{% embed '@main/shared/_tabs.html.twig' %}
    {% block tabs %}
        {% embed '@main/shared/_tab.html.twig' with {route: 'app_micro_post_list'} %}
            {% block path %} {{ path('app_micro_post_list') }} {% endblock %}
            {% block content %}
                All posts
            {% endblock %}
        {% endembed %}
        {% embed '@main/shared/_tab.html.twig' with {route: 'app_micro_post_list_top_likes', classes: 'ml-4'} %}
            {% block path %} {{ path('app_micro_post_list_top_likes') }} {% endblock %}
            {% block content %}
                Top liked posts
            {% endblock %}
        {% endembed %}
        {% embed '@main/shared/_tab.html.twig' with {route: 'app_micro_post_list_follows', classes: 'ml-4'} %}
            {% block path %} {{ path('app_micro_post_list_follows') }}  {% endblock %}
            {% block content %}
                Followed user posts
            {% endblock %}
        {% endembed %}
    {% endblock %}
{% endembed %}