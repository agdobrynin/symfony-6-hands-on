{% extends '@main/base.html.twig' %}

{% block title %}List of posts{% endblock %}

{% block body %}
    <div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-2 xl:grid-cols-3 gap-4 drop-shadow-lg dark:drop-shadow-[0_3px_3px_rgba(255,255,255,0.25)]">
        {% if posts|length > 0 %}
            {% for post in posts %}
                {{ include('@mp/include/_post.html.twig', {post}) }}
            {% endfor %}
        {% else %}
            There's nothing here yet!
        {% endif %}
    </div>
{% endblock %}