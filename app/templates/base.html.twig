<!doctype html>
<html lang="en" class="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>âš«</text></svg>">
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        const params = new Proxy(new URLSearchParams(window.location.search), {
            get: (searchParams, prop) => searchParams.get(prop),
        });

        tailwind.config = {
            darkMode: 'class',
        };
        if (null === params.darkModeOn) {
            tailwind.config.darkMode = 'x';
        }
    </script>
</head>
<body class="bg-gray-100 text-gray-800 m-10  dark:bg-gray-800 dark:text-gray-100">
<div class="w-full md:w-2/3 mx-auto mb-4 flex justify-between items-center">
    <div class="text-2xl">
        <a href="{{ url('app_micro_post_list') }}"
           class="border rounded-md p-1 text-slate-50 bg-slate-500 border-slate-900 dark:bg-slate-400 dark:text-slate-900">MP</a>
        {% block bradCrumbs %}{% endblock %}
    </div>
    <div class="text-right">
        <div class="text-sm text-gray-500 dark:text-gray-400">
            <div>
                <a href="{{ path('app_micro_post_add') }}">Add post</a>
            </div>
            <div>
                {% if is_granted('ROLE_USER') %}
                    <a href="{{ path('app_logout') }}">Logout</a>
                {% else %}
                    <a href="{{ path('app_login') }}">Login</a>
                {% endif %}
            </div>
        </div>
    </div>
</div>
<div class="w-full md:w-2/3 mx-auto mb-4">
    {{ include('@mp/include/_flash_messages_success.html.twig', {messages: flash_type_service.successes}) }}
    {{ include('@mp/include/_flash_messages_error.html.twig', {messages: flash_type_service.errors}) }}
    {% block body %}{% endblock %}
</div>
</body>
</html>